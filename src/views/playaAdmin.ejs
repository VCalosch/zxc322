<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Playas</title>
  <% include partials/head %>
</head>

<body>
  <div class="container">
    <header class="text-center">
      <h1>Playas</h1>

    </header>

    <div class="card-columns">
      <% for(var i=0; i<Playas.length; i++) {%>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <label for="nombre">Nombre: </label>
              <%= Playas[i].nombre %>
            </h5>
            <p class="card-text">
              <label for="descripcion">Descripcion: </label>
              <%= Playas[i].descripcion %>
            </p>
            <p class="card-text">
              <label for="tipoarena">Tipo arena: </label>
              <%= Playas[i].tipoarena %>
            </p>
            <p class="card-text">
              <label for="ubicacion">Ubicacion: </label>
              <%= Playas[i].ubicacion %>
            </p>
            <a href='/playaAdmin/delete/<%= Playas[i]._id%>'>Delete</a> |
            <a href='/playaAdmin/modPlaya/<%= Playas[i]._id%>'>Modificar</a>
          </div>
        </div>
        <% }%>
    </div>
    <a href="/profile" class="btn btn-light">Regresar </a>
    <a href="/addPlaya" class="btn btn-light">Agregar Playa </a>
  </div>
</body>

</html>