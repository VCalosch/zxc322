<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Socorristas</title>
  <% include partials/head %>
</head>

<body>
  <div class="container">
    <header class="text-center">
      <h1>Playa segura area de riesgos</h1>
        <hr>
    </header>
    <center><h3>Elige Playa</h3></center>
    <div class="card-columns">
      <% for(var i=0; i<Playas.length; i++) {%>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <label for="nombre">Nombre: </label>
              <%= Playas[i].nombre %>
            </h5>
            <p class="card-text">
              <label for="descripcion">Descripcion: </label>
              <%= Playas[i].descripcion %>
            </p>
            <p class="card-text">
              <label for="tipoarena">Tipo arena: </label>
              <%= Playas[i].tipoarena %>
            </p>
            <p class="card-text">
              <label for="ubicacion">Ubicacion: </label>
              <%= Playas[i].ubicacion %>
            </p>
            <a href='/GestionEventos/'>Eventos</a>
          </div>
        </div>
        <% }%>
    </div>
    <hr>
    <center><h3>Usuario asociados</h3></center>
    <div class="container">
      <div class="col-sm6">
        <div class="card">
          <div class="card-body">
            <h3>
              <span class="fa fa-user"></span> Usuarios </h3>
            <!--<strong>Email:</strong> <%= lista[0].local.email %> <br>-->
            <table>
              <% lista.forEach(function(User) { %>
                <li>
                  <%= User.local.email %>
                    
                </li>

                <% }); %>

            </table>

          </div>
        </div>
      </div>
    </div>
    <a href="/profile" class="btn btn-light">Regresar </a>
  </div>
</body>

</html>