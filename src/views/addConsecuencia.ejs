<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>Agregar Consecuencias</title>
	<% include partials/head %>
</head>

<body>
		<div class="container top-container margenf">
		<ul class="nav nav-tabs" id="myTab" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="actuacionActiva-tab" data-toggle="tab" href="#actuacionActiva" role="tab" aria-controls="actuacionActiva" aria-selected="true">Actuaciones Reactivas</a>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="actuacionActiva" role="tabpanel" aria-labelledby="actuacionActiva-tab">
						<div class="card">
								<div class="card-body Margenes">

										<form action="/addConsecuencia" method="post">
											<div class="form-row">
													<div class="col"></div>
													<div class="col"><input class="form-control" type="text" placeholder="Añadir Consecuencia" name="consecuencia"></div>
													<div class="col"></div>
											</div>
											<br>
											<div class="form-row">
															<div class="col"></div>
															<div class="col-auto"><button class="btn btn-primary">Agregar Actuación</button></div>
															<div class="col"></div>
											</div>
									</form>
							<br><hr><br>
							<div class="card-columns">
											<% for(var i=0; i<consecuencia.length; i++) {%>
													<div class="card" style="width: 250px">
													<div class="card-body">
															<h5 class="card-title">
																	<%= consecuencia[i].consecuencia %>
															</h5>
															<a href='/addConsecuencia/delete/<%= consecuencia[i]._id%>' onclick="return confirm('Esta seguro que quieres eliminar?');" >Eliminar</a>
													</div>
													</div>
													<% }%>
											</div>


								</div>
						</div>

				</div>
			</div>
		</div>
</body>

</html>