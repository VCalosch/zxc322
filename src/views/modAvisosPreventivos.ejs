<script>
    $( document ).ready(function() {
        window.actuacionReactiva = <%- JSON.stringify(addActuacionReactiva) %>;
        
            if(actuacionReactiva.campañasPrevencion == 1){
                document.getElementById("defaultCheck1").checked = true;
            }

            document.getElementById("ActuacionReactivaPost").value = actuacionReactiva.ActuacionReactiva;
            document.getElementById("ActuacionReactivaPlaya").value = actuacionReactiva.playa;
            document.getElementById("SexoPost").value = actuacionReactiva.sexo;
            document.getElementById("EdadPost").value = actuacionReactiva.edad;
            document.getElementById("ActividadPost").value = actuacionReactiva.actividad;
            document.getElementById("PaisPost").value = actuacionReactiva.pais;
            document.getElementById("FechaPost").value = actuacionReactiva.fecha;
            document.getElementById("fecha").value = actuacionReactiva.fecha;
            document.getElementById("HoraPost").value = actuacionReactiva.hora;
            document.getElementById("hora").value = actuacionReactiva.hora;
            document.getElementById("MinutoPost").value = actuacionReactiva.minuto;
            document.getElementById("minuto").value = actuacionReactiva.minuto;
            document.getElementById("SegundoPost").value = actuacionReactiva.segundo;
            document.getElementById("segundo").value = actuacionReactiva.segundo;
            document.getElementById("campañaPost").value = actuacionReactiva.campañasPrevencion;
            document.getElementById("latitudRiesgo").value = actuacionReactiva.lat;
            document.getElementById("longitudRiesgo").value = actuacionReactiva.lng;

    })    
</script>

